generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Trip {
  trip_id      Int                @id @default(autoincrement())
  destination  String
  description  String?
  start_date   DateTime
  end_date     DateTime?
  expenses     Expense[]
  participants TripParticipants[]
}

model Participant {
  participant_id Int                @id @default(autoincrement())
  first_name     String
  last_name      String
  email          String             @unique
  phone          String?
  participants   TripParticipants[]
}

enum Category {
  FOOD
  TRANSPORT
  ACCOMMODATION
  OTHER
}

model Expense {
  expense_id  Int      @id @default(autoincrement())
  amount      Float
  category    Category
  description String?
  trip_id     Int
  trip        Trip     @relation(fields: [trip_id], references: [trip_id])
}

model TripParticipants {
  trip_id        Int
  participant_id Int
  trip           Trip        @relation(fields: [trip_id], references: [trip_id])
  participant    Participant @relation(fields: [participant_id], references: [participant_id])

  @@id([trip_id, participant_id])
}
